.standard-form
  = simple_form_for(@issue) do |f|
    .field
      label.label Title
      p.control
        = f.input :title, label: false, input_html: { class: 'input' }
    .field
      label.label Release Date
      p.control
        = f.input :release_date, as: :string, label: false, input_html: { class: 'input', id: 'datepicker' }
    .field
      label.label Issue Number
      p.control
        = f.input :issue_number, as: :integer, label: false, input_html: { class: 'input' }
    .field
      p.control
        = f.input :published, as: :boolean, input_html: { class: 'checkbox' }
    .field
      label.label Issue Blurb
      p.control
        = f.input :blurb, as: :text, label: false, input_html: { class: 'textarea', rows: 10 }

    .field
      label.label Cover Image Thumbnail (300px x 200px)
      p.control
        = f.input :cover_thumbnail, as: :file, label: false
        = image_tag @issue.cover_thumbnail.to_s if @issue.cover_thumbnail

    .is-pulled-right
      p.control
        = f.button :submit, 'Save', class: 'button is-primary is-right'


    br
    br
    br
    br
    br
    br

