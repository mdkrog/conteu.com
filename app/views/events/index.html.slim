  keywords: %w(Conteu Magazine Ignite Creativity South Africa)

.columns.standard-page
  .column.is-offset-1.is-10.is-offset-1-mobile.is-10-mobile
    .columns
      .column.is-offset-2.is-8.is-offset-1-mobile.is-10-mobile.has-text-centered.title-hero
        .title.story-title All Events
        .title-horizontal-bar
    .columns.is-multiline
      - @events.each do |event|
        .column.is-4
          .all-issues-block
            = link_to event_path(event) do
              .full-width-image = image_tag event.cover_image.to_s if event.cover_image
              h2.all-issues-title = event.name
              h6.release-date= "#{event.date.to_time.strftime("%B %Y")}".upcase
              / .all-issues-horizontal-bar
              / p = raw issue.blurb.gsub(/\n/, '<br/>') if event.description